{
    "id": "me.iepure.devtoolbox",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "devtoolbox",
    "separate-locales": false,
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "pypi-dependencies.json",
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": [
                "*"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/blueprint-compiler",
                    "tag": "v0.18.0"
                }
            ]
        },
        {
            "name": "devtoolbox",
            "builddir": true,
            "buildsystem": "meson",
            "post-install": [
                "mv /app/bin/devtoolbox /app/bin/devtoolbox-bin",
                "install -Dm755 /app/devtoolbox/devtoolbox-run-script /app/bin/devtoolbox"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}