{
    "app-id" : "me.iepure.devtoolbox",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "devtoolbox",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin"
    },
    "modules" : [
        "pypi-dependencies.json",
        {
            "name" : "devtoolbox",
            "builddir" : true,
            "buildsystem" : "meson",
            "post-install": [
                "mv /app/bin/devtoolbox /app/bin/devtoolbox-bin",
                "install -Dm755 /app/devtoolbox/devtoolbox-run-script /app/bin/devtoolbox"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/aleiepure/devtoolbox",
                    "branch": "main"
                }
            ]
        }
    ]
}
