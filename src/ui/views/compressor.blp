using Gtk 4.0;
using Adw 1;

template $CompressorView: Adw.Bin {
  Adw.ToastOverlay _toast {
    child: ScrolledWindow {
      child: Adw.Clamp {
        vexpand: true;
        maximum-size: 1200;
        tightening-threshold: 600;

        child: Box {
          orientation: vertical;

          $UtilityTitle _title {}

          Separator {
            margin-top: 10;
            margin-bottom: 10;
          }

          Adw.PreferencesGroup {
            title: _("Tool options");

            Adw.ActionRow {
              title: _("Direction");
              subtitle: _("Select the desired operation");
              icon-name: "horizontal-arrows-symbolic";

              [suffix]
              Adw.ToggleGroup _direction_selector {
                valign: center;
                notify::active => $_on_direction_changed_signal();

                Adw.Toggle {
                  label: _("Compress");
                }

                Adw.Toggle {
                  label: _("Decompress");
                }
              }
            }
          }

          Separator {
            margin-top: 10;
          }

          Box {
            orientation: horizontal;
            homogeneous: true;
            spacing: 10;

            $TextFileArea _input_area {
              name: _("Input");
              show-clear-btn: true;
              show-paste-btn: true;
              show-open-btn: true;
              use-default-text-extensions: true;
              use-default-image-extensions: true;
              text-wrap-mode: "word-char";

              text-changed => $_on_input_changed_signal();
              image-loaded => $_on_input_changed_signal();
              file-loaded => $_on_input_changed_signal();
              error => $_on_error_signal();
              view-cleared => $_on_view_cleared_signal();
            }

            $TextFileArea _output_area {
              name: _("Output");
              show-copy-btn: true;
              show-clear-btn: false;
              show-paste-btn: false;
              show-open-btn: false;
              text-editable: false;
              allow-drag-and-drop: false;
              text-wrap-mode: "char";
              default-save-name: "decompressed-image.png";

              error => $_on_error_signal();
              saved => $_on_file_saved_signal();
            }
          }

          Box {
            orientation: horizontal;
            halign: center;
            margin-bottom: 10;
            margin-top: 10;

            styles [
              "dimmed",
            ]

            Image {
              margin-end: 5;
              pixel-size: 24;
              icon-name: "info-symbolic";
            }

            Box {
              orientation: vertical;

              Label {
                label: _("The compression result and the expected decompression input are base64 encoded.");
                halign: start;
              }

              Label {
                label: _("May hang the app for large files, please wait.");
                halign: start;
              }
            }
          }
        };
      };
    };
  }
}
